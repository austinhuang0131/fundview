# Default Homebrew MySQL server config
[mysqld]
# Only allow connections from localhost
bind-address = 127.0.0.1
mysqlx-bind-address = 127.0.0.1
secure_file_priv = 'PATH TO YOUR REPO THAT YOU WANT'
connect_timeout = 60
delayed_insert_timeout = 600
innodb_flush_log_at_timeout = 10
innodb_lock_wait_timeout = 120
innodb_rollback_on_timeout = ON
interactive_timeout = 600
lock_wait_timeout = 3600
mysqlx_connect_timeout = 60
mysqlx_idle_worker_thread_timeout = 120
mysqlx_interactive_timeout = 3600
mysqlx_port_open_timeout = 30
mysqlx_read_timeout = 60
mysqlx_wait_timeout = 3600
mysqlx_write_timeout = 120
net_read_timeout = 120
net_write_timeout = 120
replica_net_timeout = 120
rpl_stop_replica_timeout = 3600
rpl_stop_slave_timeout = 3600
slave_net_timeout = 120
ssl_session_cache_timeout = 600
wait_timeout = 600
